#!/usr/bin/env bash

alias mc="mc --no-x11"

if command -v code-insiders &>/dev/null; then
    alias code=code-insiders
fi

if [ -d ~/.ansible/bin ]; then
    for bin in ~/.ansible/bin/ansible*; do
        if [ -f "$bin" ]; then
            alias_name=$(basename "$bin")
            alias "$alias_name"="$bin"
        fi
    done
    unset bin alias_name
fi
