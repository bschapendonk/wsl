#!/usr/bin/env bash

alias mc="mc --no-x11"

if command -v code-insiders &>/dev/null; then
    alias code=code-insiders
fi

# Automatically create aliases for all ansible-related executables in ~/.ansible/bin
ansible_bin_dir="~/.ansible/bin"
if [ -d "$ansible_bin_dir" ]; then
    for ansible_exe in "$ansible_bin_dir"/ansible*; do
        if [ -f "$ansible_exe" ]; then
            alias_name="$(basename "$ansible_exe")"
            alias "$alias_name"="$ansible_exe"
        fi
    done
    unset ansible_exe alias_name ansible_bin_dir
fi
