#!/usr/bin/env bash

alias mc="mc --no-x11"

if command -v code-insiders &>/dev/null; then
    alias code=code-insiders
fi

if [ -d $HOME/.ansible ]; then
    alias anisible=$HOME/.ansible/bin/ansible
    alias anisible-builder=$HOME/.ansible/bin/ansible-builder
    alias anisible-community=$HOME/.ansible/bin/ansible-community
    alias anisible-config=$HOME/.ansible/bin/ansible-config
    alias anisible-console=$HOME/.ansible/bin/ansible-console
    alias anisible-doc=$HOME/.ansible/bin/ansible-doc
    alias anisible-galaxy=$HOME/.ansible/bin/ansible-galaxy
    alias anisible-inventory=$HOME/.ansible/bin/ansible-inventory
    alias anisible-playbook=$HOME/.ansible/bin/ansible-playbook
    alias anisible-pull=$HOME/.ansible/bin/ansible-pull
    alias anisible-test=$HOME/.ansible/bin/ansible-test
    alias anisible-vault=$HOME/.ansible/bin/ansible-vault

    # source <($HOME/.ansible/bin/activate-global-python-argcomplete --dest -)
fi


